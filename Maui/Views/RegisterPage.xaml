<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Views.RegisterPage">
    <VerticalStackLayout Padding="20" Spacing="10">

        <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
        <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" />
        <Entry Placeholder="ConfirmPassword" Text="{Binding ConfirmPassword}" IsPassword="True" />
        <Entry Placeholder="FirstName" Text="{Binding FirstName}" />
        <Entry Placeholder="LastName" Text="{Binding LastName}" />

        <Button Text="Zarejestruj" Command="{Binding RegisterCommand}" />
        
        
    </VerticalStackLayout>
</ContentPage>
    
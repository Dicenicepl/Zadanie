<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Views.MePage">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Label Text="Email:" FontAttributes="Bold"/>
        <Label Text="{Binding User.Email}" />

        <Label Text="Imię:" FontAttributes="Bold"/>
        <Label Text="{Binding User.FirstName}" />

        <Label Text="Nazwisko:" FontAttributes="Bold"/>
        <Label Text="{Binding User.LastName}" />

        <Label Text="Data Założenia Konta:" FontAttributes="Bold"/>
        <Label Text="{Binding User.CreatedDate}" />

        <Button Text="Odśwież" Command="{Binding RefreshCommand}" />
        <Button Text="Wyloguj" Command="{Binding LogOutCommand}" />


    </VerticalStackLayout>

</ContentPage>
    